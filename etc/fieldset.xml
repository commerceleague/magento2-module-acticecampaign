<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
	<scope id="global">
		<fieldset id="activecampaign_convert_customer">
			<field name="id">
				<aspect name="to_contact" targetField="customer_id" />
			</field>
			<field name="email">
				<aspect name="to_contact" />
				<aspect name="to_api_request" />
			</field>
			<field name="firstname">
				<aspect name="to_api_request" targetField="firstName"/>
			</field>
			<field name="lastname">
				<aspect name="to_api_request" targetField="lastName"/>
			</field>
		</fieldset>
	</scope>
</config>
