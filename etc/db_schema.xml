<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="activecampaign_connection" resource="default" engine="innodb"
	       comment="ActiveCampaign Connection Table">
		<column xsi:type="int" name="connection_id" padding="10" unsigned="true" nullable="false" identity="true"
		        comment="Entity Id"/>
		<column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
		<column xsi:type="varchar" name="logo_url" nullable="false" length="255" comment="Logo Url"/>
		<column xsi:type="varchar" name="link_url" nullable="false" length="255" comment="Link Url"/>
		<column xsi:type="int" name="active_campaign_id" padding="10" unsigned="true" nullable="true" identity="false"
		        comment="Active Campaign Id"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
		        comment="Created At"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
		        comment="Updated At"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="connection_id"/>
		</constraint>
	</table>
	
	<table name="activecampaign_contact" resource="default" engine="innodb" comment="ActiveCampaign Contact Table">
		<column xsi:type="int" name="contact_id" padding="10" unsigned="true" nullable="false" identity="true"
		        comment="Entity Id"/>
		<column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
		<column xsi:type="int" name="active_campaign_id" padding="10" unsigned="true" nullable="true" identity="false"
		        comment="Active Campaign Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="contact_id"/>
		</constraint>
	</table>
</schema>